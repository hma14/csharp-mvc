@model Omnae.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Phone Number";
}

<div class="offset-md-2 col-md-8 top-margin-30">
    <div class="card">

        <h4 class="card-header primary-background-color white-text text-md-center"><i class="fas fa-mobile-alt"></i> Add a cell phone number</h4>
        <div class="card-block">

            @using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <br />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="md-form offset-md-2 col-md-8">
                    <i class="fa fa-phone prefix"></i>
                    @Html.LabelFor(m => m.Number, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
                </div>
                <br />
                <div class="text-xs-center">
                    <button type="submit" class="btn accent-background-color buttonWidth2 top-margin-50">Submit</button>
                </div>
            }

        </div>
    </div>
</div>

