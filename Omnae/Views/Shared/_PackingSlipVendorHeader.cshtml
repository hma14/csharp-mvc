@model Omnae.BusinessLayer.Models.PackingSlipViewModel

<div class="col-xs-12 top-margin-20">
    <div class="col-xs-5 no-margin no-padding">
        @if (@Model.CompanyLogoUri != null)
        {
            <img src="@Model.CompanyLogoUri" height="200" style="margin-top:-50px"/>
        }
        else
        {
            <h2 class="green-text">@Model.VendorName</h2>
        }

    </div>
    <div class="col-xs-5">
        <h2 class="col-xs-12">@Model.VendorName</h2>
        <span class="col-xs-12">

            @if (Model.VendorAddress_AddressLine2 != null)
            {
                @Model.VendorAddress_AddressLine2
            }
            @Model.VendorAddress_AddressLine1<br />
            @Model.VendorAddress_City,
            @if (Model.VendorAddress_State != null)
            {
                @Model.AdminAddress_State<br />
            }
            @Model.VendorAddress_CountryName,
            @if (Model.VendorAddress_PostalCode != null)
            {
                @Model.VendorAddress_PostalCode
            }
            else if (Model.VendorAddress_ZipCode != null)
            {
                @Model.VendorAddress_ZipCode
            }

        </span>
    </div>
    <div class="col-xs-2 pull-xs-right">
        T. @Model.VendorPhoneNumber<br />
        
    </div>
</div>
