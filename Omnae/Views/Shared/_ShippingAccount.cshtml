@model Omnae.ViewModels.ShippingAccountViewModel

@if (Model != null && Model.ShippingAccountList != null && Model.ShippingAccountList.Any())
{
    <div class="font-weight-bold grey-text">Existing Shipping Account(s)</div>
    <div class="col-md-12 card-header default-color pull-left white-text status-title">
        <span class="col-md-1">#</span>
        <span class="col-md-3">Account Name</span>
        <span class="col-md-3">Account Number</span>
        <span class="col-md-2">Carrier Name</span>
        <span class="col-md-2">Carrier Type</span>
        <span class="col-md-1">Delete</span>
    </div>

    int i = 1;
    foreach (var sa in Model.ShippingAccountList)
    {
    <div class="col-md-12 line">
        <span class="col-md-1">@i</span>
        <span class="col-md-3">@sa.Name</span>
        <span class="col-md-3">@sa.AccountNumber</span>
        <span class="col-md-2">@sa.Carrier</span>
        <span class="col-md-2">@Enum.GetName(typeof(SHIPPING_CARRIER_TYPE), sa.CarrierType)</span>
        <a onclick="DeleteShippingAccount(@sa.Id);" class="delet col-md-1"><i class="fas fa-trash"></i></a>
    </div>
        i++;
    }
}

