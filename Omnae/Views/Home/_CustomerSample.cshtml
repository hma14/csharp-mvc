@model Omnae.Model.Models.TaskData

@{
    ViewBag.Title = "Customer Sample";
}


<div class="row">

    <div class="card-block">
        <h4 class=" text-center"><i class="fa fa-check-square fa-2x"></i> Customer Reacts on Sample</h4>

        <br />
        @using (Html.BeginForm("CustomerSampleHandler", "Home", FormMethod.Post))
            {
            @Html.AntiForgeryToken()
            TempData["TaskData"] = Model;

            <div class="md-form">
                <fieldset class="form-group">
                    <input name="group" type="radio" class="with-gap" id="forward" value="forward">
                    <label for="forward">Sample is approved</label>
                </fieldset>

                <fieldset class="form-group">
                    <input name="group" type="radio" class="with-gap" id="back" value="back">
                    <label for="back">Sample is rejected</label>
                </fieldset>

            </div>

            <div class="md-form text-xs-center top-margin-50">
                <button type="submit" class="btn btn-cyan buttonWidth">Submit</button>
            </div>

        }

    </div>
</div>

