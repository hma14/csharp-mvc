@model Omnae.ViewModels.CreateAccountForCustomerViewModel

<style>
    .dynamic {
        display: none;
    }
</style>


<div class="col-md-12 top-margin-30">
    <div class="md-form">
        <div class="col-md-5">
            @Html.LabelFor(model => model.ContinueRegistration.CompanyName, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.ContinueRegistration.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ContinueRegistration.CompanyName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4">
            @Html.EnumDropDownListFor(model => model.ContinueRegistration.UserType, " -- Select a User Type -- ", new { @class = "btn grey-background-color dropdown-toggle col-md-12" })
            @Html.ValidationMessageFor(model => model.ContinueRegistration.UserType, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3">
            <input type="checkbox" id="ContinueRegistration.isEnterprise" name="ContinueRegistration.isEnterprise" value="true">
            <label class="link" for="ContinueRegistration.isEnterprise">Is Enterprise</label>
        </div>
    </div>


    <div class="md-form col-md-6 top-margin-20">
        @Html.LabelFor(model => model.ContinueRegistration.AddressLine1, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.ContinueRegistration.AddressLine1, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ContinueRegistration.AddressLine1, "", new { @class = "text-danger" })
    </div>

    <div class="md-form col-md-6 top-margin-20">
        @Html.LabelFor(model => model.ContinueRegistration.AddressLine2, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.ContinueRegistration.AddressLine2, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ContinueRegistration.AddressLine2, "", new { @class = "text-danger" })
    </div>



    <div class="md-form">
        <div class="md-form col-md-4">
            @Html.LabelFor(model => model.ContinueRegistration.City, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.ContinueRegistration.City, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ContinueRegistration.City, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-8">
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.ContinueRegistration.CountryId, ViewBag.CountryList as SelectList, new { @id = "country", @class = "btn grey-background-color dropdown-toggle ddl col-md-12" })
                @Html.ValidationMessageFor(model => model.ContinueRegistration.CountryId, "", new { @class = "text-danger" })
            </div>

            <div class="dynamic usa ddl col-md-6">
                @Html.DropDownListFor(model => model.ContinueRegistration.StateId, ViewBag.States as SelectList, new { @class = "btn grey-background-color dropdown-toggle" })
                @Html.ValidationMessageFor(model => model.ContinueRegistration.StateId, "", new { @class = "text-danger" })
            </div>

            <div class="canada ddl col-md-6">
                @Html.DropDownListFor(model => model.ContinueRegistration.ProvinceId, ViewBag.Provinces as SelectList, new { @class = "btn grey-background-color dropdown-toggle" })
                @Html.ValidationMessageFor(model => model.ContinueRegistration.ProvinceId, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="col-md-12 no-padding">

        <div class="md-form dynamic usa col-md-6">
            @Html.LabelFor(model => model.ContinueRegistration.ZipCode, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.ContinueRegistration.ZipCode, new { htmlAttributes = new { @id = "zipcode", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ContinueRegistration.ZipCode, "", new { @class = "text-danger" })
        </div>

        <div class="md-form canada col-md-6">
            @Html.LabelFor(model => model.ContinueRegistration.PostalCode, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.ContinueRegistration.PostalCode, new { htmlAttributes = new { @id = "postalcode", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ContinueRegistration.PostalCode, "", new { @class = "text-danger" })
        </div>

        <div class="md-form dynamic others col-md-6">
            @Html.LabelFor(model => model.ContinueRegistration.AreaCode, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.ContinueRegistration.AreaCode, new { htmlAttributes = new { @id = "areacode", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ContinueRegistration.AreaCode, "", new { @class = "text-danger" })
        </div>
        <div class="md-form col-md-6">
            @Html.LabelFor(model => model.ContinueRegistration.Attention, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.ContinueRegistration.Attention, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ContinueRegistration.Attention, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="md-form col-md-6">
        <input type="checkbox" id="ContinueRegistration.IsBilling" name="ContinueRegistration.IsBilling" value="true">
        <label class="link" for="ContinueRegistration.IsBilling">This is my Billing Address</label>
    </div>

    <div class="md-form col-md-6">
        <input type="checkbox" id="ContinueRegistration.IsShipping" name="ContinueRegistration.IsShipping" value="true">
        <label class="link" for="ContinueRegistration.IsShipping">This is my Shipping Address</label>
    </div>

</div>
