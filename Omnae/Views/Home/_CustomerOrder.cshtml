@model Omnae.Model.Models.TaskData

@{
    ViewBag.Title = "Customer Order";
}


<div class="row">

    <div class="card-block">
        <h4 class="text-center"><i class="fa fa-check-square fa-2x"></i> Customer Reacts on Order</h4>

        <br />
        @using (Html.BeginForm("OrderHandler", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            TempData["TaskData"] = Model;

            <div class="md-form">
                <fieldset class="form-group">
                    <input name="group" type="radio" class="with-gap" id="forward" value="forward">
                    <label for="forward">Order is initiated</label>
                </fieldset>

                <fieldset class="form-group">
                    <input name="group" type="radio" class="with-gap" id="back" value="back">
                    <label for="back">Order is paid</label>
                </fieldset>

            </div>

            <div class="md-form text-xs-center top-margin-50">
                <button type="submit" class="btn btn-cyan buttonWidth">Submit</button>
            </div>

        }

    </div>
</div>

