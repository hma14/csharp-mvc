@model Omnae.ViewModels.AdminUpdateUserEmailViewModel

<div class="offset-md-2 col-md-8 top-margin-30">
    <div class="card">

        <h4 class="card-header primary-background-color white-text text-md-center"><i class="fas fa-pencil-alt"></i> Admin Update User Email</h4>
        <!--Form without header-->
        <div class="card-block">
            <div class="offset-md-1 col-md-10">
                @using (Html.BeginForm("AdminUpdateUserEmail", "Home", FormMethod.Post, new
                {
                    id = "AdminUpdateUserEmailForm",
                    enctype = "multipart/form-data",
                }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="md-form">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="md-form top-margin-30">
                        @Html.DropDownListFor(model => model.Id, ViewBag.DdlUsers as SelectList, "-- Select Email to Update --", new { @id = "DdlUsers", @class = "btn grey-background-color dropdown-toggle col-md-11 ddl" })
                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                    </div>
                    if (TempData["Message"] != null)
                    {
                        <div class="col-md-12 green-text text-md-center">@TempData["Message"]</div>
                    }
                    else if (TempData["ErrorMessage"] != null)
                    {
                        <div class="col-md-12 red-text text-md-center">@TempData["ErrorMessage"]</div>
                    }
                    <div class="text-xs-center">
                        <button type="submit" class="btn submit accent-background-color buttonWidth2 top-margin-50">Update</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('#AdminUpdateUserEmailForm').submit(function () {
            $('#spinner').show();
        })
    })
</script>