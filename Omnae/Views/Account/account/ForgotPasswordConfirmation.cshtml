@{
    ViewBag.Title = "Forgot Password Confirmation";
}

<div class="offset-md-2 col-md-8 top-margin-30">
    <div class="card">
        <h4 class="card-header primary-background-color white-text text-md-center">
            <i class="fas fa-check"></i>  @ViewBag.Title
        </h4>

        <div class="card-block">
            
            <div class="offset-md-1 col-md-10">
                <h5 class="card-text top-margin-30 green-text text-xs-center text-justify">Please check your email to reset your password.</h5>
                
            </div>

        </div>
    </div>
</div>
